<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Nhập trang bị" Height="359" Width="800">
    <StackPanel HorizontalAlignment="Center" Width="310" Height="336" VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal">
            <Label Height="30" Width="100" x:Name="Label1" Content="Tên trang bị :" RenderTransformOrigin="0.345,0.401" Margin="30,30,0,0" Background="White"/>

            <ComboBox Name="Combobox1" Height="30" Width="180" SelectedIndex="0" Margin="0,30,0,0">

                <ComboBoxItem>Đạn</ComboBoxItem>
                <!--Đạn 7,62mm
                    Đạn 9mm
                    Đạn 45-->
                    <ComboBoxItem>Lựu đạn</ComboBoxItem>
                <!-- Lựu đạn nổ
                  Lựu đạn khói ngụy trang
                  Lựu đạn choáng -->

                <ComboBoxItem>Xẻng</ComboBoxItem>
                <!--Xẻng công binh dã chiến-->
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="54">
            <Label Height="30" Width="100" x:Name="Label2" Content="Loại trang bị :" RenderTransformOrigin="0.345,0.401" Margin="30,30,0,0" Background="White"/>

            <ComboBox Name="Combobox2" Height="30" Width="180" SelectedIndex="1" Margin="0,30,0,0">
                <ComboBoxItem>Lựu đạn nổ</ComboBoxItem>
                <ComboBoxItem>Lựu đạn khói ngụy trang</ComboBoxItem>
                <ComboBoxItem>Lựu đạn choáng</ComboBoxItem>

            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Height="30" Width="100" x:Name="Label3" Content="Số lượng:" RenderTransformOrigin="0.345,0.401" Margin="30,30,0,0" Background="White"/>
            <TextBox Width="108" Height="27" HorizontalAlignment="Center" Margin="0,30,0,0"></TextBox>
        </StackPanel>



        <StackPanel Orientation="Horizontal">
            <Button x:Name="Button1" HorizontalAlignment="Left" Height="50" Width="90" Margin="10,10,20,20">Xác nhận</Button>
            <Button x:Name="Button2" HorizontalAlignment="Left" Height="50" Width="90" Margin="30,10,20,20" >Huỷ</Button>
        </StackPanel>
    </StackPanel>
</Window>
