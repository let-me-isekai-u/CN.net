<Window x:Class="VD2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VD2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Nut an 1"></Button>
        <Button Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Nut an 2"></Button>
        <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" Content="Nut an 5"></Button>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Nut an 3"></Button>
        <Button Grid.Row="2" Grid.Column="2" Content="Nut an 4"></Button>

    </Grid>
    
</Window>
